{
  "compileOnSave": false,
  "compilerOptions": {
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es5",
    "module": "es2015",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@hulk/shared": ["libs/shared/src/index.ts"],
      "@hulk/data": ["libs/data/src/index.ts"],
      "@hulk/data/products": ["libs/data/products/src/index.ts"],
      "@hulk/shared-theme": ["libs/shared-theme/src/index.ts"],
      "@hulk/shared/test-utilities": [
        "libs/shared/test-utilities/src/index.ts"
      ],
      "@hulk/shared/title-header": ["libs/shared/title-header/src/index.ts"],
      "@hulk/ui": ["libs/ui/src/index.ts"],
      "@hulk/ui/custom-material": ["libs/ui/custom-material/src/index.ts"],
      "@hulk/ui/accordian": ["libs/ui/accordian/src/index.ts"],
      "@hulk/ui/fast-click": ["libs/ui/fast-click/src/index.ts"],
      "@hulk/ui/split-layout": ["libs/ui/split-layout/src/index.ts"],
      "@hulk/ui/products": ["libs/ui/products/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
