{
  "compileOnSave": false,
  "compilerOptions": {
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es5",
    "module": "es2015",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@hulk/shared": ["libs/shared/src/index.ts"],
      "@hulk/data": ["libs/data/src/index.ts"],
      "@hulk/data/products": ["libs/data/products/src/index.ts"],
      "@hulk/shared-theme": ["libs/shared-theme/src/index.ts"],
      "@hulk/shared/themes": ["libs/shared/themes/src/index.ts"],
      "@hulk/shared/theme": ["libs/shared/theme/src/index.ts"],
      "@hulk/shared/test-utilities": ["libs/shared/test-utilities/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
